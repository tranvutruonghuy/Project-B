

@model Project_B.Models.CategoryModel
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var categories = ViewBag.Categories as List<CategoryModel>;
}

<div class="page-wrapper">
    <div class="page-content-tab">
        <form method="post" enctype="multipart/form-data" id="add-category-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-lg-12 col-xxl-12">
                    <div class="card">
                        <div class="card-body">
                            <h1>Add Category</h1>
                            <div class="app-product-section">
                                <div class="main-title">
                                    <h6>General Information</h6>
                                </div>
                                <div>
                                    <div class="app-form">
                                        <div class="mb-3">
                                            <label class="form-label">Category Name</label>
                                            <input type="text" class="form-control" asp-for="Name" id="category-name">
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                            @* <p id="name-category-error" class="error-text">Please fill in the name</p> *@
                                        </div>
                                        
                                    
                                        <div class="mb-3">
                                            <label class="form-label">Category Detail</label>
                                           
                                            <textarea class="form-control" id="category-description" rows="3" asp-for="Description"></textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                            @* <p id="description-category-error" class="error-text">Please fill in the name</p> *@
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Parent Category</label>
                                            
                                            <select asp-for="ParentID">
                                                <option value="-1">Root</option>
                                                @if(categories != null)
                                                {
                                                    @foreach(CategoryModel category in categories){
                                                        <option value="@category.Id">@category.Name</option>
                                                    }
                                                }
                                            </select>
                                            <span asp-validation-for="ParentID" class="text-danger"></span>
                                            @* <p id="parentId-category-error" class="error-text">Please fill in the name</p> *@
                                        </div>
                                    </div>
                                </div>

                                <div class="app-divider-v dashed"></div>
                            </div>
                            
                            <div class="col-12">
                                <div class="mt-4 d-flex justify-content-end gap-2 flex-column flex-sm-row text-end">
                                    <a asp-action="Index" class="btn btn-light-secondary">Discard</a>
                                    <button class="btn btn-primary" type="submit">Add Category</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </form>

    </div>


</div>





@section Scripts { 
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} 
} 
