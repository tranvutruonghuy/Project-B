@model Project_B.Models.ProductModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="page-content-tab">
        <form enctype="multipart/form-data" id="add-product-form" asp-action="Create" asp-controller="Product" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-lg-12 col-xxl-12">
                    <div class="card">
                        <div class="card-body">
                            <h1>Add Product</h1>
                            <div class="app-product-section">
                                <div class="main-title">
                                    <h6>General Information</h6>
                                </div>
                                <br />
                                <div>
                                    <div class="app-form">
                                        <div class="row mb-3">
                                            <div class="col-lg-1">
                                                <label asp-for="Name" class="form-label"></label>
                                            </div>
                                            <div class="col-lg-11">
                                                <input asp-for="Name" class="form-control" required />
                                                <div class="valid-feedback">
                                                    This look good!
                                                </div>
                                                <div class="invalid-feedback">
                                                    Please enter this field!
                                                </div>
                                                <span asp-validation-for="Name" class="text-danger"></span>
                                            </div>
                                            
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-lg-1">
                                                <label asp-for="CategoryId" class="form-label"></label>
                                            </div>
                                            <div class="col-lg-11">
                                                <select class="form-select mb-3 " id="CategoryId" aria-label="Choose category" asp-for="CategoryId" asp-items="ViewBag.CategoryId">
                                                </select>
                                            </div>
                                            
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-lg-1">
                                                <label asp-for="ShortDescription" class="form-label"></label>
                                            </div>
                                            <div class="col-lg-11">
                                                <textarea class="form-control" asp-for="ShortDescription" required></textarea>
                                                <div class="valid-feedback">
                                                    This look good!
                                                </div>
                                                <div class="invalid-feedback">
                                                    Please enter this field!
                                                </div>
                                            </div>

                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-lg-1">
                                                <label asp-for="Description" class="form-label"></label>
                                            </div>
                                            <div class="col-lg-11">
                                                <textarea class="form-control" id="product-detail" rows="3" asp-for="Description" required></textarea>
                                                <div class="valid-feedback">
                                                    This look good!
                                                </div>
                                                <div class="invalid-feedback">
                                                    Please enter this field!
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-lg-1">
                                                <label asp-for="Unit" class="form-label"></label>
                                            </div>
                                            <div class="col-lg-11">
                                                <input asp-for="Unit" class="form-control" required />
                                                <div class="valid-feedback">
                                                    This look good!
                                                </div>
                                                <div class="invalid-feedback">
                                                    Please enter this field!
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-lg-1">
                                                <label asp-for="InStock" class="form-label"></label>
                                            </div>
                                            <div class="col-lg-11">

                                                <input asp-for="InStock" class="form-control" required />
                                                <div class="valid-feedback">
                                                    This look good!
                                                </div>
                                                <div class="invalid-feedback">
                                                    Please enter this field!
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-lg-1">
                                                <label asp-for="Price" class="form-label"></label>
                                            </div>
                                            <div class="col-lg-11">

                                                <input asp-for="Price" required class="form-control b-r-right" id="price" aria-label="Price" aria-describedby="basic-addon1">
                                                <div class="valid-feedback">
                                                    This look good!
                                                </div>
                                                <div class="invalid-feedback">
                                                    Please enter this field!
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                            <div class="app-product-section">
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h4 class="card-title mb-0">Multiple File Upload</h4>
                                        </div><!-- end card header -->

                                        <div class="card-body">
                                            <p class="text-muted">FilePond is a JavaScript library that optimizes multiple images for faster uploads and offers a great, accessible, silky smooth user experience.</p>
                                            <input type="file" class="filepond filepond-input-multiple" multiple name="filepond" data-allow-reorder="true" data-max-file-size="3MB" data-max-files="3" asp-for="Image">
                                        </div>
                                        <!-- end card body -->
                                    </div>
                                    <!-- end card -->
                                </div>
                               
                                
                            </div>
                            <div class="col-12">
                                <div class="mt-4 d-flex justify-content-end gap-2 flex-column flex-sm-row text-end">
                                    <button type="button" class="btn btn-light-secondary">Discard</button>
                                    <button class="btn btn-primary" type="submit" value="Create" id="submit-btn">Add Product</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>




    </div>


</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}