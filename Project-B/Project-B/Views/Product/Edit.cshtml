@model Project_B.Models.ProductModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="page-content-tab">
        <form enctype="multipart/form-data" id="add-product-form" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-lg-12 col-xxl-12">
                    <div class="card">
                        <div class="card-body">
                            <h1>Edit Product</h1>
                            <div class="app-product-section">
                                <div class="main-title">
                                    <h6>General Information</h6>
                                </div>
                                <div>
                                    <div class="app-form">
                                        <div class="mb-3">
                                            <label asp-for="Name" class="control-label"></label>
                                            <input asp-for="Name" class="form-control" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <label class="input-group-text" for="CategoryId">Category name</label>
                                            </div>
                                            <select class="custom-select" id="CategoryId" asp-for="CategoryId" asp-items="ViewBag.CategoryId">
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="ShortDescription" class="form-label"></label>
                                            <textarea class="shortDes-product" rows="2" asp-for="ShortDescription"></textarea>
                                            <span asp-validation-for="ShortDescription" class="text-danger"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Description" class="form-label"></label>
                                            <textarea class="form-control" id="product-detail" rows="3" asp-for="Description"></textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                            <script>
                                                CKEDITOR.replace('product-detail');
                                            </script>
                                        </div>
                                    </div>
                                </div>
                                <div class="app-divider-v dashed"></div>
                                <div class="main-title">
                                    <h6>Inventory</h6>
                                </div>
                                <div>
                                    <div class="app-form">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="Unit" class="form-label"></label>
                                                    <input asp-for="Unit" class="form-control" />
                                                    <span asp-validation-for="Unit" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="InStock" class="form-label"></label>
                                                    <input asp-for="InStock" class="form-control" />
                                                    <span asp-validation-for="InStock" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="app-divider-v dashed"></div>
                            </div>
                            <div class="app-product-section">
                                <div class="main-title">
                                    <h6>Product Media</h6>
                                </div>
                                <div class="preview">
                                    <input accept="image/*" class="app-file-upload addproduct file-input" type="file" id="addProduct" multiple="multiple" data-allow-reorder="true" asp-for="Image">
                                    <img id="img-preview" src="~/uploadImages/@Model.Image" />
                                </div>
                                <div class="app-divider-v dashed"></div>
                                <div class="main-title">
                                    <h6>Pricing</h6>
                                </div>
                                <div class="app-form">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="mb-3">
                                                <label asp-for="Price" class="form-label"></label>
                                                <div class="input-group mb-3">
                                                    <input asp-for="Price" class="form-control b-r-right" id="price" aria-label="Price" aria-describedby="basic-addon1">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="app-divider-v dashed"></div>
                            </div>
                            <div class="col-12">
                                <div class="mt-4 d-flex justify-content-end gap-2 flex-column flex-sm-row text-end">
                                    <button type="button" class="btn btn-light-secondary">Discard</button>
                                    <button class="btn btn-primary" type="submit" value="Edit" id="submit-btn">Edit Product</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>




    </div>


</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}