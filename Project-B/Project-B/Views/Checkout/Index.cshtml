<!-- WISHLIST AREA START -->
<div class="ltn__checkout-area mb-105">
    <div class="container">
        <form>
        <div class="row">
            
                <div class="col-lg-12">
                    <div class="ltn__checkout-inner">
                    
                        <div class="ltn__checkout-single-content mt-50">
                            <h4 class="title-2">Billing Details</h4>
                            <div class="ltn__checkout-single-content-info">
                           
                                    <h6>Personal Information</h6>
                                    <div class="row">
                                        <h6>Please fill in the address</h6>
                                        <div class="row">
                                            <div class="col-lg-4 col-md-6">
                                                <h6>Province</h6>
                                                <select id="provinceSelect" size="20" name="Province">
                                                    <option value="" selected>Province</option>
                                                </select>
                                            </div>
                                            <div class="col-lg-4 col-md-6">
                                                <h6>District</h6>
                                                <select id="districtSelect" size="20" name="District">
                                                    <option value="" selected>District</option>
                                                </select>
                                            </div>
                                            <div class="col-lg-4 col-md-6">
                                                <h6>Ward</h6>
                                                <select id="wardSelect" size="20" name="Ward">
                                                    <option value="......" selected>Ward</option>
                                                </select>
                                            </div>
                                            <div class="col-lg-12 col-md-12">
                                                <h6>Address</h6>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="input-item">
                                                            <input type="text" placeholder="House number and street name" name="Street" id="checkout-street">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <h6>Order Notes (optional)</h6>
                                    <div class="input-item input-item-textarea ltn__custom-icon">
                                    <textarea id="checkout-note" name="Note" placeholder="Notes about your order, e.g. special notes for delivery."></textarea>
                                    </div>
                                    
                            

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="ltn__checkout-payment-method mt-50">
                        <h4 class="title-2">Payment Method</h4>
                        <div id="checkout_accordion_1">
                            <div class="card">
                                <h5>
                                    <input type="radio" name="PaymentMethod" value="Cash"> Cash on delivery
                                </h5>

                            </div>
                            <!-- card -->
                            <div class="card">
                                <h5>
                                    <input type="radio" name="PaymentMethod" value="Banking">  Banking
                                </h5>

                            </div>
                        </div>
                        <div class="ltn__payment-note mt-30 mb-30">
                            <p>Your personal data will be used to process your order, support your experience throughout this website, and for other purposes described in our privacy policy.</p>
                        </div>
                        <button class="btn theme-btn-1 btn-effect-1 text-uppercase" type="button" onclick="submitOrder()">Place order</button>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="shoping-cart-total mt-50">
                        <h4 class="title-2">Cart Totals</h4>
                        <table class="table">
                            <tbody>
                                @foreach(WishListModel e in ViewBag.WishList){
                                    <tr>
                                        <td>@e.ProductName <strong>× @e.Quantity</strong></td>
                                        <td>@e.Price.ToString("##,###") VND</td>
                                    </tr>
                                
                                }
                                @{
                                    var cartSubtotal = 0.0m;
                                    var shipping = 15000m;
                                    foreach (var e in ViewBag.WishList)
                                    {
                                        cartSubtotal = cartSubtotal + e.Price;
                                    }
                                }
                                <tr>
                                    <td>Shipping and Handing</td>
                                    <td>@shipping.ToString("##,###") VND</td>
                                </tr>
                                <tr>
                                    <td><strong>Order Total</strong></td>
                                    <td><strong>@((shipping + cartSubtotal).ToString("##,###")) VND</strong></td>
                                </tr>
                            </tbody>
                        </table>
                        
                    </div>
                    
                </div>
            
        </div>
        </form>
    </div>
</div>
